<div class="mx-auto d-block session">
  <h1><%= t("sign up") %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <label class="label"><i class="fas fa-user"></i></label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>

    <label class="label"><i class="fas fa-envelope"></i></label>
    <%= f.email_field :email, class: 'form-control', placeholder: :email %>

    <label class="label"><i class="fas fa-lock"></i></label>
    <%= f.password_field :password, class: 'form-control', placeholder: :password %>

    <label class="label"><i class="fas fa-lock"></i></label>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: :password_confirmation %>

    <div class="actions">
      <%= f.submit t("sign up") %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
