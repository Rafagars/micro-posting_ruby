<!-- Post Section -->
<div class="post">
  <%= render @post %>
</div>

<!-- Comments Section -->
<p> <%= t("comment") %>s (<%= @comments.count %>)</p>

<% if user_signed_in? %>
  <!-- Form for new comments -->
  <%= render 'comments/form' %>
<% else %>
  <h2><%= t("show_comment_warning") %></h2>
<% end %>
<!-- All Comments -->
<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
  <% end %>
</div>
<!-- -->

<div class="digg_pagination offset-4">
  <%= will_paginate @comments %>
</div>